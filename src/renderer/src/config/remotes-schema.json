          "type": "string",
          "required": true,
          "placeholder": "Contenido del JSON de credenciales",
          "hidden": true
        },
        "bucket_policy_only": {
          "label": "Bucket Policy Only",
          "type": "boolean",
          "value": "true"
        },
        "bucket": {
          "label": "Bucket",
          "type": "string",
          "required": true,
          "placeholder": "mi-bucket-gcs"
        },
        "path": {
          "label": "Ruta",
          "type": "string",
          "required": false,
          "placeholder": "ruta/dentro/del/bucket"
        }
      }
    },
    {
      "name": "SFTP (SSH)",
      "type": "sftp",
      "icon": "./icons/sftp.png",
      "config": {
        "type": {
          "value": "sftp",
          "hidden": true
        },
        "host": {
          "label": "Servidor (Host)",
          "type": "string",
          "required": true,
          "placeholder": "sftp.ejemplo.com"
        },
        "user": {
          "label": "Usuario",
          "type": "string",
          "required": true,
          "placeholder": "mi_usuario"
        },
        "port": {
          "label": "Puerto",
          "type": "number",
          "value": "22"
        },
        "pass": {
          "label": "Contraseña",
          "type": "string",
          "required": false,
          "placeholder": "Dejar vacío si usas llave"
        },
        "key_file": {
          "label": "Ruta a Llave Privada",
          "type": "string",
          "required": false,
          "placeholder": "C:\\Ruta\\a\\tu\\llave.pem"
        },
        "path": {
          "label": "Ruta inicial",
          "type": "string",
          "required": false,
          "placeholder": "/home/usuario/carpeta"
        },
        "subsystem": {
          "label": "Subsystem (Avanzado)",
          "type": "string",
          "value": "sftp",
          "placeholder": "sftp"
        },
        "server_path_override": {
          "label": "Ruta sftp-server (Avanzado)",
          "type": "string",
          "required": false,
          "placeholder": "/usr/lib/openssh/sftp-server"
        },
        "shell_type": {
          "label": "Tipo de Shell (Avanzado)",
          "type": "string",
          "value": "unix",
          "placeholder": "unix, windows, none"
        },
        "md5sum_command": {
          "label": "Comando MD5 (Avanzado)",
          "type": "string",
          "value": "none",
          "placeholder": "none o comando"
        },
        "sha1sum_command": {
          "label": "Comando SHA1 (Avanzado)",
          "type": "string",
          "value": "none",
          "placeholder": "none o comando"
        }
      }
    },
    {
      "name": "FTP (Estándar)",
      "type": "ftp",
      "icon": "./icons/ftp.png",
      "config": {
