        },
        "key": {
          "label": "Clave de Aplicación",
          "type": "string",
          "required": true,
          "placeholder": "Application Key"
        },
        "hard_delete": {
          "label": "Hard Delete",
          "type": "boolean",
          "value": "true"
        },
        "bucket": {
          "label": "Bucket",
          "type": "string",
          "required": false,
          "placeholder": "mi-bucket-b2"
        },
        "path": {
          "label": "Ruta",
          "type": "string",
          "required": false,
          "placeholder": "ruta/dentro/del/bucket"
        }
      }
    },
    {
      "name": "Google Cloud Storage",
      "type": "google cloud storage",
