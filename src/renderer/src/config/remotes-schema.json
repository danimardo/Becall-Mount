      "config": {
        "type": {
          "value": "s3",
          "hidden": true
        },
        "provider": {
          "value": "AWS",
          "hidden": true
        },
        "access_key_id": {
          "label": "Access Key ID",
          "type": "string",
          "required": true,
          "placeholder": "AWS Access Key ID"
        },
        "secret_access_key": {
          "label": "Secret Access Key",
          "type": "string",
          "required": true,
          "placeholder": "AWS Secret Access Key"
        },
        "region": {
          "label": "Región",
          "type": "string",
          "required": true,
          "placeholder": "us-east-1"
        },
        "endpoint": {
          "label": "Endpoint",
          "type": "string",
          "required": true,
          "placeholder": "https://s3.amazonaws.com"
        },
        "bucket": {
          "label": "Bucket",
          "type": "string",
          "required": true,
          "placeholder": "mi-bucket-s3"
        },
        "path": {
          "label": "Ruta",
          "type": "string",
          "required": false,
          "placeholder": "ruta/dentro/del/bucket"
