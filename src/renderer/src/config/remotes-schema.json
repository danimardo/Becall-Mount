          "value": "ftp",
          "hidden": true
        },
        "host": {
          "label": "Servidor (Host)",
          "type": "string",
          "required": true,
          "placeholder": "ftp.ejemplo.com"
        },
        "user": {
          "label": "Usuario",
          "type": "string",
          "required": true,
          "placeholder": "anonymous"
        },
        "port": {
          "label": "Puerto",
          "type": "number",
          "value": "21"
        },
        "pass": {
          "label": "Contraseña",
          "type": "string",
          "required": true
        },
        "path": {
          "label": "Ruta inicial",
          "type": "string",
          "required": false,
          "placeholder": "/carpeta"
        }
      }
    },
    {
      "name": "FTPS (FTP Seguro)",
      "type": "ftp",
      "config": {
        "type": {
          "value": "ftp",
          "hidden": true
        },
        "tls": {
          "value": "true",
          "hidden": true
        },
        "host": {
          "label": "Servidor (Host)",
          "type": "string",
          "required": true,
          "placeholder": "ftps.ejemplo.com"
        },
        "user": {
          "label": "Usuario",
          "type": "string",
          "required": true
        },
        "port": {
          "label": "Puerto",
          "type": "number",
          "value": "990"
        },
        "pass": {
          "label": "Contraseña",
          "type": "string",
          "required": true
        },
        "path": {
          "label": "Ruta inicial",
          "type": "string",
          "required": false,
          "placeholder": "/carpeta"
        }
      }
    },
    {
      "name": "Azure Blob Storage",
      "type": "azureblob",
      "icon": "./icons/azure.svg",
      "config": {
        "type": {
          "value": "azureblob",
          "hidden": true
        },
        "account": {
          "label": "Nombre de Cuenta",
          "type": "string",
          "required": true,
          "placeholder": "ej: mi_cuenta_azure"
        },
        "key": {
          "label": "Clave de Acceso",
          "type": "string",
          "required": true,
          "placeholder": "Clave principal o secundaria"
        },
        "bucket": {
          "label": "Contenedor (Bucket)",
          "type": "string",
          "required": true,
          "placeholder": "nombre-del-contenedor"
        },
        "path": {
          "label": "Ruta interna",
          "type": "string",
          "required": false,
          "placeholder": "subcarpeta/opcional"
        }
      }
    }
  ],
  "globalMountFlags": {
    "--vfs-cache-mode": {
      "label": "Modo Caché VFS",
      "type": "select",
      "options": ["off", "minimal", "writes", "full"],
      "default": "full",
      "description": "Controla cómo rclone cachea los objetos en disco"
    },
    "--vfs-cache-max-size": {
      "label": "Tamaño Máx. Caché",
      "type": "select",
      "options": ["off", "10G", "50G", "100G", "500G"],
      "default": "off",
      "description": "Límite de espacio en disco para la caché"
    },
    "--vfs-cache-max-age": {
      "label": "Tiempo Máx. Caché",
      "type": "select",
      "options": ["1h", "12h", "24h", "48h", "168h"],
      "default": "1h",
      "description": "Tiempo máximo que un objeto permanece en caché sin uso"
    },
    "--cache-dir": {
      "label": "Directorio de Caché",
      "type": "string",
      "placeholder": "Ej: D:/RcloneCache",
      "description": "Ruta personalizada para almacenar los archivos temporales de la caché."
    },
    "--volname": {
      "label": "Nombre del Volumen",
      "type": "string",
      "placeholder": "Ej: MiNube",
      "description": "Nombre que aparecerá en el Explorador de Windows para la unidad montada."
    },
    "--network-mode": {
      "label": "Modo Red (Network Drive)",
      "type": "select",
      "options": ["off", "true"],
      "default": "off",
      "description": "Si se activa, la unidad aparecerá como una Ubicación de Red en lugar de un disco local."
    },
    "--bwlimit": {
      "label": "Límite de Ancho de Banda",
      "type": "select",
      "options": ["off", "1M", "5M", "10M", "20M", "50M", "100M"],
      "default": "off",
      "description": "Limita la velocidad de transferencia (subida/bajada) para no saturar tu conexión."
    },
    "--buffer-size": {
      "label": "Tamaño de Buffer en RAM",
      "type": "select",
      "options": ["16M", "32M", "64M", "128M", "256M", "512M"],
      "default": "16M",
      "description": "Memoria RAM usada por archivo transferido. Aumentar mejora rendimiento en conexiones rápidas pero consume más RAM."
    },
    "--dir-cache-time": {
      "label": "Caché de Directorios",
      "type": "select",
      "options": ["30s", "1m", "5m", "30m", "1h", "24h"],
      "default": "5m",
      "description": "Tiempo que rclone recuerda la lista de archivos. Reducir si los archivos cambian mucho externamente."
    }
  }
}